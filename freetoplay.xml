<?xml version="1.0" encoding="utf-8"?>
<root>
  <diamond_packs>
    <pack store_key="ctw_diamonds1" diamonds="90"/>
    <pack store_key="ctw_diamonds2" diamonds="500"/>
    <pack store_key="ctw_diamonds3" diamonds="1200"/>
    <pack store_key="ctw_diamonds4" diamonds="2500"/>
    <pack store_key="ctw_diamonds5" diamonds="6500"/>
    <pack store_key="ctw_diamonds6" diamonds="14000"/>
 </diamond_packs>
  <ingame_prices>
    <first_gift value="25"/>        <!--дать игроку начальное кол-во алмазов при 1-м старте игры-->
    <every_day_gift value="3"/>     <!--Ежедневно давать игроку в виде подарка заданное параметром кол-во алмазов-->
    <new_tech_gift value="1"/>      <!--за открытие новой технологии-->
    <kill_vampire_gift value="10"/>     <!--за убийство хранителя-->
    <finish_biome_gift value="15"/>     <!--за прохождение биома-->
    <finish_level_gift value="25"/>     <!--за строительство портала (прохождение уровня)-->
    <dlc_biomes value="350"/>    <!-- стоимость DLC биомы-->
    <dlc_sisters value="250"/>   <!-- стоимость DLC сестры по оружию-->
    <dlc_world1 value="200"/>    <!-- стоимость зимнего мира-->
    <dlc_world2 value="200"/>    <!-- стоимость пустынного мира-->
    <dlc_world3 value="200"/>    <!-- стоимость подземного мира-->
    <satisfaction value="2500"/>        <!--Награда за episodes edition-->
  </ingame_prices>
  <params>
    <time_reduction value="1"/>             <!--продолжительность времени (мин), которое может быть сокращено при помощи 1 алмаза-->
    <when_use_dialog value="5"/>           <!--Выводить диалог для подтверждения траты алмазов больше определенного количества-->
    <craft_time_ingredient value="20"/>     <!--Скорость крафта на скамейках зависит от кол-ва ингредиентов. По умолчанию 20 секунд на 1 ингредиент.-->
    <craft_ratio value="10"/>               <!--коэффициент для увеличения времени крафта предметов на прочих станках.-->
    <gifted_blocks value="150"/>            <!--1 алмаз за выкапывание - 150 блоков.-->
    <level_exp_ratio value="3"/>            <!-- коэффициент увеличения необходимого опыта для повышения уровня (по умолчанию 3)-->
    <level_exp_one_percent_ratio value="0.5"/>  <!--  коэффициент, определяющий кол-во алмазов для наполнения шкалы опыта на 1%-->
    <max_energy value="100"/>               <!--  запас энергии у одного гнома, по умолчанию 100 единиц.-->
    <energy_restore value="40"/>            <!--  кол-во восстанавливаемых единиц энергии за 1 алмаз - по умолчанию 40-->
    <energy_idle_rate value="1"/>           <!--  покой 1 ед/мин - если гном стоит на месте и ничего не делает.-->
    <energy_low_rate value="3"/>            <!--  низкая 3 ед/мин - если гном просто идет или взбирается по какой-либо конструкции (леса, лестница).-->
    <energy_normal_rate value="5"/>         <!--  обычная (по умолчанию) 5 ед/мин - если гном выполняет обычную работу (крафт на скамейке , готовка, крафт на верстаке)-->
    <energy_medium_rate value="7"/>         <!--  средняя 7 ед/мин - если гном взбирается без специальных конструкций, выполняет крафтинг на кузнице, мастерской или лаборатории).-->
    <energy_high_rate value="12"/>          <!--  тяжелая  12 ед/мин - если гном копает, рубит или сражается.-->
    <energy_restore_speed_first value="30"/>  <!--  скорость восстановление энергии во время сна до границы {energy_restore_limit} ед/мин.-->
    <energy_restore_speed_second value="5"/>  <!--   скорость восстановление энергии во время сна после границы {energy_restore_limit} ед/мин.-->
    <energy_restore_limit value="10"/>      <!--  до этого запаса энергия восстанавливается со скоростью {energy_restore_speed_first} ед/мин, после - {energy_restore_speed_second} ед/мин-->
    <diamonds_to_money value="2"/>          <!--  курс пересчета алмазов в золотые монеты. По умолчанию - 2 монеты за 1 алмаз.-->
    <dig_ratio value="2"/>                  <!--  общий коэффициент. копание, стройка, рубка леса. Значение по умолчанию - 2-->
    <skill_ratio value="2"/>                <!--  коэффициент усиления влияния скилов гномов. Значение по умолчанию 2.-->
    <event_low_energy value="15"/>          <!-- вывод иконки уведомления о низком запасе энергии у гнома, по умолчанию 15%.-->
    <craft_bg_distib value="60"/>           <!-- распределение фонового времени на крафт и восстановление энергии, по умолчанию 60% на крафт.-->
    <mana_nerf_ratio value="0.3"/>          <!-- коэффициент роста дрейна маны -->
    <mana_restore_time value="3"/>          <!-- время восстановления единицы маны -->
    <mana_restore_limit value="20"/>        <!-- % маны от максимального базового (без расширителей) запаса (по умолчанию 20%) -->
    <mana_restore_abs_limit value="10"/>    <!-- максимальное значение маны которое восстанавливается при достижении очередного уровня или в фоне, по умолчанию 10 единиц -->
    <craft_bg_limit value="50"/>            <!-- счетчик длины очереди на строительство в фоновом режиме (по умолчанию не более 50 предметов). -->
    <base_soul_restore_time value="5"/>     <!-- базовое время восстановления умершего гнома, значение по умолчанию 5 мин -->
    <koeff_soul_restore_time value="5"/>    <!-- коэффициент, по умолчанию 1 мин -->
    <bonus_soul_restore_time value="25"/>   <!-- Построенный хранитель душ дает бонусом 25% (параметр) к скорости восстановления. -->
    <dismount value="0.3"/>                 <!-- Время разборки рассчитывается от времени крафта этого же предмета с учетом коэффициента, значение по умолчанию 0,3 -->
    <tech_cost value="0.1"/>                <!-- определяющий кол-во алмазов для наполнения шкалы технологии на 1%, значение по умолчанию 1. -->
    <next_craft_time_step value="5"/>       <!-- % увеличения времени на крафт(в фоне) очередного предмета после изготовления заданного числа предметов. По умолчанию 5% -->
    <dwarf_resurection_cost value="1"/>     <!-- стоимость восстановления гнома в алмазах из расчета кол-ва часов оставшегося времени, по умолчанию 1 алмаз за 1 час оставшегося времени.   -->
  </params>
</root>